{
  "name": "chengzi-personal-x402",
  "version": "0.1.0",
  "description": "Personal website with x402 payment integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:all": "npm install && cd frontend && npm install && cd .. && npm run build",
    "postinstall": "cd frontend && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest",
    "test:frontend": "cd frontend && npm test",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "x402",
    "payment",
    "coinbase",
    "crypto"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  }
}
